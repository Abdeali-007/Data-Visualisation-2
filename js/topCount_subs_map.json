{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 600,
  "width": 1400,
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "graticule": {
          "step": [
            30,
            30
          ]
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgray",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Abdeali-007/Data-Visualisation-2/main/js/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Abdeali-007/Data-Visualisation-2/main/datasets/Global%20YouTube%20Statistics.csv",
        "format": {
          "type": "csv"
        }
      },
      "transform": [
        {
          "filter": "datum.subscribers != null && datum.Country != null && datum.Latitude != null && datum.Longitude != null && !isNaN(datum.Latitude) && !isNaN(datum.Longitude) && datum.Country != 'nan' && datum.Latitude != 'nan' && datum.Longitude != 'nan'"
        },
        {
          "aggregate": [
            {
              "op": "sum",
              "field": "subscribers",
              "as": "total_subscribers"
            },
            {
              "op": "count",
              "field": "Youtuber",
              "as": "channels"
            }
          ],
          "groupby": [
            "Country",
            "Latitude",
            "Longitude"
          ]
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.7,
        "stroke": "black",
        "strokeWidth": 1
      },
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "total_subscribers",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              10000000,
              100000000,
              500000000,
              1000000000,
              5000000000
            ],
            "range": [
              10,
              75,
              200,
              450,
              750,
              1250
            ]
          },
          "legend": {
            "title": "Total Subscribers",
            "format": ".1s"
          }
        },
        "color": {
          "field": "channels",
          "type": "quantitative",
          "scale": {
            "scheme": "reds"
          },
          "legend": {
            "title": "Number of Top YouTube Channels",
            "labelLimit": 300,
            "titleLimit": 300
          }
        },
        "tooltip": [
          {
            "field": "Country",
            "title": "Country"
          },
          {
            "field": "channels",
            "title": "Top YouTube Channels"
          },
          {
            "field": "total_subscribers",
            "title": "Total Subscribers",
            "format": ".2s"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "background": "#f9f9f9"
  }
}