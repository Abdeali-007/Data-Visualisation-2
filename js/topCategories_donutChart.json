{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 600,
  "width": 1500,
  "description": "Donut chart showing the percentage distribution of YouTube categories among the top 955 channels, with smaller categories grouped into 'Others'.",
  "data": {
    "url": "https://raw.githubusercontent.com/Abdeali-007/Data-Visualisation-2/main/datasets/Global%20YouTube%20Statistics.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "filter": "datum.category != null && datum.category != 'nan'"
    },
    {
      "aggregate": [
        {
          "op": "count",
          "as": "count"
        }
      ],
      "groupby": [
        "category"
      ]
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [
        {
          "field": "count",
          "order": "descending"
        }
      ]
    },
    {
      "calculate": "datum.rank > 5 ? 'Others' : datum.category",
      "as": "category_grouped"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "count",
          "as": "count"
        }
      ],
      "groupby": [
        "category_grouped"
      ]
    },
    {
      "calculate": "(datum.count / 955) * 100",
      "as": "percentage"
    }
  ],
  "encoding": {
    "theta": {
      "field": "percentage",
      "type": "quantitative",
      "stack": true
    },
    "color": {
      "field": "category_grouped",
      "type": "nominal",
      "title": "Category",
      "scale": {
        "range": [
          "#8dd3c7",
          "#ffffb3",
          "#bebada",
          "#b3de69",
          "#80b1d3",
          "#fdb462"
        ]
      },
      "legend": null
    }
  },
  "layer": [
    {
      "mark": {
        "type": "arc",
        "outerRadius": 190,
        "innerRadius": 110
      },
      "encoding": {
        "tooltip": [
